{
  "compilerOptions": {
    "strict": false,
    "noImplicitAny": false,
    "target": "es6",
    "module": "commonjs",
    "jsx": "react",
    "preserveConstEnums": true,
    "sourceMap": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": false,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "./node_modules/@types/",
      "./typings/"
    ],
    "lib": [
      "es2017",
      "dom",
      "es2017.object"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}